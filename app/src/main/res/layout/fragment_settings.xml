<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragments.fragment_settings.FragmentSettings">

        <EditText
            android:id="@+id/edit_text_n_songs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_max_percent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/text_view_max_percent"
            app:layout_constraintTop_toTopOf="@+id/text_view_max_percent" />

        <EditText
            android:id="@+id/edit_text_percent_change_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:ems="5"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_percent_change_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/edit_text_n_songs"
            app:layout_constraintTop_toTopOf="@+id/text_view_percent_change_up" />

        <EditText
            android:id="@+id/edit_text_percent_change_down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:ems="5"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_percent_change_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/edit_text_n_songs"
            app:layout_constraintTop_toTopOf="@+id/text_view_percent_change_down" />

        <TextView
            android:id="@+id/text_view_max_percent_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/max_percent_desc"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/text_view_percent_change_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_max_percent" />

        <TextView
            android:id="@+id/text_view_max_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/max_percent"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/text_view_max_percent_desc"
            app:layout_constraintEnd_toStartOf="@+id/edit_text_n_songs"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_percent_changed_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/percent_change_desc"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_percent_change_down" />

        <TextView
            android:id="@+id/text_view_percent_change_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/percent_change_up"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/text_view_percent_change_down"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_max_percent_desc" />

        <TextView
            android:id="@+id/text_view_percent_change_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/percent_change_down"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/text_view_percent_changed_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_percent_change_up" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>