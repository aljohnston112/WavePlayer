
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linearLayoutSongPane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_host_fragment">

        <ImageView
            android:id="@+id/imageViewSongPaneSongArt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/music_note_black_48dp"
            android:contentDescription="@string/song_art" />

        <TextView
            android:id="@+id/textViewSongPaneSongName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_weight="2"
            android:text="@string/easter_egg" />

        <ImageButton
            android:id="@+id/imageButtonSongPanePrev"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:srcCompat="@drawable/skip_previous_black_24dp" />

        <ImageButton
            android:id="@+id/imageButtonSongPanePlayPause"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:srcCompat="@drawable/pause_black_24dp" />

        <ImageButton
            android:id="@+id/imageButtonSongPaneNext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/skip_next_black_24dp" />

    </LinearLayout>
